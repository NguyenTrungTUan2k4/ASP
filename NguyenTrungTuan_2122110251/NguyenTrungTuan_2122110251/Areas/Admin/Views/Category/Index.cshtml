@model IEnumerable<NguyenTrungTuan_2122110251.Context.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* Styling for the main table */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 14px;
        text-align: left;
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

    th {
        background-color: #0275d8;
        color: white;
        padding: 10px;
        text-align: center;
        font-weight: bold;
    }

    td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: center;
        color: #555;
    }

    /* Alternating row colors */
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    /* Buttons styling */
    a {
        color: #0275d8;
        text-decoration: none;
        font-weight: 500;
        padding: 6px 10px;
        border: 1px solid #0275d8;
        border-radius: 4px;
        transition: all 0.3s ease-in-out;
    }

        a:hover {
            background-color: #0275d8;
            color: white;
        }

    /* Title styling */
    h2 {
        font-size: 22px;
        color: #444;
        margin-bottom: 15px;
        font-weight: 600;
    }

    /* Create button */
    p > a {
        color: white;
        background-color: #0275d8;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.3s ease-in-out;
    }

        p > a:hover {
            background-color: #025aa5;
        }
</style>


<h2>Quản lý Danh mục</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Avartar)</th>
        <th>@Html.DisplayNameFor(model => model.Slug)</th>
        <th>@Html.DisplayNameFor(model => model.ShowOnHomePage)</th>
        <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
        <th>@Html.DisplayNameFor(model => model.Deleted)</th>
        @* Uncomment if needed
            <th>@Html.DisplayNameFor(model => model.CreatedOnUtc)</th>
            <th>@Html.DisplayNameFor(model => model.UpdatedOnUtc)</th>
        *@
        <th>Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Avartar))
                {
                    <img src="@Url.Content("~/Content/images/category/" + item.Avartar)" alt="Category Image" style="max-width: 100px; max-height: 50px;" />
                }
                else
                {
                    <span>Không có ảnh</span>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
            <td>@Html.DisplayFor(modelItem => item.ShowOnHomePage)</td>
            <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
            <td>@Html.DisplayFor(modelItem => item.Deleted)</td>
            @* Uncomment if needed
        <td>@Html.DisplayFor(modelItem => item.CreatedOnUtc)</td>
        <td>@Html.DisplayFor(modelItem => item.UpdatedOnUtc)</td>
            *@
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
